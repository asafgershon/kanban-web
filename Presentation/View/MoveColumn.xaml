<Window x:Class="Presentation.View.MoveColumn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="MoveColumn" Height="200" Width="200">
    <Grid Background="#FFF7F7F7">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Move Column" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="22" />
        <Label Content="New Column Position:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <TextBox Text="{Binding Path=ShiftSize}" Width="40" Height="40" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,25,0"/>
        <Label Name="Message" HorizontalContentAlignment="Center" Foreground="Red" HorizontalAlignment="Center" Height="46" Width="200" Grid.Row="2">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="{Binding Path=Message, Mode=OneWay}"/>
            </Label.Content>
        </Label>
        <Button Content="Save" Grid.Row="3" Width="50" Height="35" Click="Button_Click"/>
    </Grid>
</Window>
